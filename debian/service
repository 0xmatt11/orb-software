[Unit]
Description=Short lived token daemon
## persistent contains SE pairing keys
After=usr-persistent.mount

[Service]
Type=simple
Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/var/local/home/worldcoin/worldcoin_bus_socket
SyslogIdentifier=worldcoin-update-agent
ExecStart=/bin/bash -c 'ORB_ID=$(/usr/bin/orb-id) /usr/bin/orb-short-lived-token-daemon'

[Install]
WantedBy=multi-user.target
